<theme>
    <formatVersion>3</formatVersion>
    <include>./../mpcore-nxt.xml</include>
    <include>./../art/layouts/colorset_grey2.xml</include>
    <include>./../art/layouts/soundset_def.xml</include>
    <include>./../art/layouts/missingart_def.xml</include>
    <include>./../art/layouts/systembg_def.xml</include>
	
	<!--SYSTEM VIEW-->	
	<view name="system">
		<!--system description-->
		<text name="system_description" extra="true">
			<text>The TI-99/4 and TI-99/4A are home computers released by Texas Instruments in 1979 and 1981, respectively. Based on the Texas Instruments TMS9900 microprocessor originally used in minicomputers, the TI-99/4 was the first 16-bit home computer. The associated video display controller provides color graphics and sprite support which were only comparable with those of the Atari 400 and 800 released a month after the TI-99/4.</text>
			
		</text>
		<!--system screenshots-->
		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
			
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
			
		</image>
		<!--system carousel logo-->
		<image name="logo">
			<path>./system.svg</path>
			 
        </image>	
		<!--controller systemsize-->
		<image name="controller_sys" extra="true">
            <path>./controller.svg</path>
			 
		</image>
	</view>
	<!--SYSTEM VIEW END-->	
	<!--DETAIL VIDEO VIEW-->	
	<view name="basic, detailed, video">

		<!--gamelist logo image-->
		<image name="gamelist_logo" extra="true">
            <path>./system.svg</path>  
			
		</image>
		<!--gamelist controller image-->
		<image name="controller_logo" extra="true">
            <path>./controller.svg</path>  
		</image>
	</view>
	<!--DETAIL VIDEO VIEW END-->
</theme>