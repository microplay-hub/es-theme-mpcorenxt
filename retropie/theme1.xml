<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>333333</color>
		</image>
		

		<image name="logo">
			<path>./logo.png</path>
		</image>


	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>RetroPie Settings</text>
		</text>
		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot2.jpg</path>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.280 0.280</maxSize>
		</image>
	</view>

	<view name="basic, detailed">

		<image name="background" extra="true">
			<color>333333</color>
		</image>

		<image name="logo" extra="true">
			<pos>0.8 0.082</pos>
			<maxSize>0.262 0.122</maxSize>
		</image>

		<textlist name="gamelist">
			<selectorColor>636363</selectorColor>
			<size>0.26 0.615</size>
		</textlist>

		<text name="md_lbl_players, md_lbl_genre, md_players, md_genre, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_playcount">
			<pos>1 1</pos>
		</text>

		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>
		
		<datetime name="md_releasedate, md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<image name="md_favorite, md_kidgame, md_hidden" extra="true">
			<pos>1 1</pos>
			<origin>0 0</origin>
		</image>

		<image name="md_image">
			<pos>0.800 0.380</pos>
			<maxSize>0.4 0.4</maxSize>
		</image>

		<text name="md_description">
			<pos>0.025 0.78</pos>
			<size>0.95 0.1</size>
		</text>

		<image name="border" extra="true">
			<path>./../art/border_settings.png</path>
		</image>

	</view>
	
</theme>