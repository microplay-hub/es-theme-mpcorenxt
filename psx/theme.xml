<theme>
    <formatVersion>3</formatVersion>
    <include>./../mpcore-nxt.xml</include>
    <include>./../art/layouts/colorset_grey1.xml</include>
    <include>./../art/layouts/soundset_sony.xml</include>
    <include>./../art/layouts/missingart_def.xml</include>
    <include>./../art/layouts/systembg_sony.xml</include>
	
	<!--SYSTEM VIEW-->	
	<view name="system">
		<!--system description-->
		<text name="system_description" extra="true">
			<text>The PlayStation is a 32-bit fifth-generation video game console first released by Sony Computer Entertainment in Japan on December 3, 1994. The PlayStation was the first "computer entertainment platform" to ship 100 million units, which it had reached 9 years and 6 months after its initial launch. In 2000, a re-designed, "slim" version was released, called the PSone. This marked the end of the original grey console.</text>
			
		</text>
		<!--system screenshots-->
		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
			
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
			
		</image>
		<!--system carousel logo-->
		<image name="logo">
			<path>./system.svg</path>
			 
        </image>	
		<!--controller systemsize-->
		<image name="controller_sys" extra="true">
            <path>./controller.svg</path>
			 
		</image>
	</view>
	<!--SYSTEM VIEW END-->	
	<!--DETAIL VIDEO VIEW-->	
	<view name="basic, detailed, video">
		<!--gamelist logo image-->
		<image name="gamelist_logo" extra="true">
            <path>./system.svg</path>  
			
		</image>
		<!--gamelist controller image-->
		<image name="controller_logo" extra="true">
            <path>./controller.svg</path>  
		</image>
	</view>
	<!--DETAIL VIDEO VIEW END-->
</theme>