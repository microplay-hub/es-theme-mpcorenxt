<theme>
    <formatVersion>3</formatVersion>
    <include>./../mpcore-nxt.xml</include>
    <include>./../art/layouts/colorset_red1.xml</include>
    <include>./../art/layouts/soundset_nintendo.xml</include>
    <include>./../art/layouts/missingart_def.xml</include>
    <include>./../art/layouts/systembg_nintendo.xml</include>
	
	<!--SYSTEM VIEW-->	
	<view name="system">
		<!--system description-->
		<text name="system_description" extra="true">
			<text>The Game Boy Color is Nintendo's successor to the 8-bit Game Boy handheld game console, and was released on October 21, 1998 in Japan, November 19, 1998 in North America, November 23, 1998 in Europe and November 27, 1998 in the United Kingdom. It features a color screen and is slightly thicker and taller than the Game Boy Pocket. As with the original Game Boy, it has an 8-bit processor. The Game Boy and Game Boy Color combined have sold 118.69 million units worldwide.</text>
			
		</text>
		<!--system screenshots-->
		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
			
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
			
		</image>
		<!--system carousel logo-->
		<image name="logo">
			<path>./system.svg</path>
			 
        </image>	
		<!--controller systemsize-->
		<image name="controller_sys" extra="true">
            <path>./controller.svg</path>
			 
		</image>
	</view>
	<!--SYSTEM VIEW END-->	
	<!--DETAIL VIDEO VIEW-->	
	<view name="basic, detailed, video">

		<!--gamelist logo image-->
		<image name="gamelist_logo" extra="true">
            <path>./system.svg</path>  
			
		</image>
		<!--gamelist controller image-->
		<image name="controller_logo" extra="true">
            <path>./controller.svg</path>  
		</image>
	</view>
	<!--DETAIL VIDEO VIEW END-->
</theme>