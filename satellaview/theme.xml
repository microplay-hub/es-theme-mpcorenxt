<theme>
    <formatVersion>3</formatVersion>
    <include>./../mpcore-nxt.xml</include>
    <include>./../art/layouts/colorset_red1.xml</include>
    <include>./../art/layouts/soundset_nintendo.xml</include>
    <include>./../art/layouts/missingart_def.xml</include>
    <include>./../art/layouts/systembg_def.xml</include>
	
	<!--SYSTEM VIEW-->	
	<view name="system">
		<!--system description-->
		<text name="system_description" extra="true">
			<text>The Satellaview[a] is a satellite modem peripheral produced by Nintendo for the Super Famicom in 1995. Containing 1 megabyte of ROM space and an additional 512 kB of RAM,[1] Satellaview allowed players to download games, magazines, and other media through satellite broadcasts provided by Japanese company St.GIGA.</text>
			
		</text>
		<!--system screenshots-->
		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
			
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
			
		</image>
		<!--system carousel logo-->
		<image name="logo">
			<path>./system.svg</path>
			 
        </image>	
		<!--controller systemsize-->
		<image name="controller_sys" extra="true">
            <path>./controller.svg</path>
			 
		</image>
	</view>
	<!--SYSTEM VIEW END-->	
	<!--DETAIL VIDEO VIEW-->	
	<view name="basic, detailed, video">

		<!--gamelist logo image-->
		<image name="gamelist_logo" extra="true">
            <path>./system.svg</path>  
			
		</image>
		<!--gamelist controller image-->
		<image name="controller_logo" extra="true">
            <path>./controller.svg</path>  
		</image>
	</view>
	<!--DETAIL VIDEO VIEW END-->
</theme>