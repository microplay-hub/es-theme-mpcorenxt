<theme>
    <formatVersion>3</formatVersion>
    <include>./../mpcore-nxt.xml</include>
    <include>./../art/layouts/colorset_purple1.xml</include>
    <include>./../art/layouts/soundset_def.xml</include>
    <include>./../art/layouts/missingart_def.xml</include>
    <include>./../art/layouts/systembg_def.xml</include>
	
	<!--SYSTEM VIEW-->	
	<view name="system">
		<!--system description-->
		<text name="system_description" extra="true">
			<text>Kodi is an award-winning free and open source (GPL) software media center for playing videos, music, pictures, games, and more. It allows users to play and view most videos, music, podcasts, and other digital media files from local and network storage media and the internet.</text>
			
		</text>
		<!--system screenshots-->
		<image name="screenshot_left" extra="true">
			<path>./screenshot1.jpg</path>
			
		</image>
		<image name="screenshot_right" extra="true">
			<path>./screenshot2.jpg</path>
			
		</image>
		<!--system carousel logo-->
		<image name="logo">
			<path>./systemlogo_kodi.png</path>
			 
        </image>	
		<!--controller systemsize-->
		<image name="controller_sys" extra="true">
            <path>./controller.svg</path>
			 
		</image>
	</view>
	<!--SYSTEM VIEW END-->	
	<!--DETAIL VIDEO VIEW-->	
	<view name="basic, detailed, video">

		<!--gamelist logo image-->
		<image name="gamelist_logo" extra="true">
            <path>./systemlogo_kodi.png</path>  
			
		</image>
		<!--gamelist controller image-->
		<image name="controller_logo" extra="true">
            <path>./controller.svg</path>  
		</image>
	</view>
	<!--DETAIL VIDEO VIEW END-->
</theme>